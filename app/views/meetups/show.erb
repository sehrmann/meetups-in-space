<h1><%= @meetup.meetup_name %></h1>
<ul>
  <li>Description: <%= @meetup.description %></li>
  <li>Location: <%= @meetup.location %></li>
  <% if User.ids.include?(@meetup.creator_id) %>
    <li>Creator: <%= User.find(@meetup.creator_id).username %></li>
  <% end %>
</ul>
<% unless @hide_button %>
  <form action="/meetups/join/<%= @meetup.id %>" method="post">
    <input type="submit" value="Join Meetup">
  </form>
<% end %>
<p><%= @error_msg %></p>
<h3>Members</h3>
<ul>
  <% @meetup.users.each do |user| %>
    <li><%= user.username %></li>
  <% end %>
</ul>
